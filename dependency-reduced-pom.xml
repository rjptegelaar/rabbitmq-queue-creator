<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>nl.paultegelaar.rabbitmq.util</groupId>
  <artifactId>rabbitmq-queue-creator</artifactId>
  <name>RabbitmqQueueCreator</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>Utility class to create queues based on a config file.</description>
  <profiles>
    <profile>
      <id>standard-build</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jsonschema2pojo</groupId>
            <artifactId>jsonschema2pojo-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
              <execution>
                <goals>
                  <goal>generate</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <sourceDirectory>${basedir}/src/main/resources/schema</sourceDirectory>
              <targetPackage>nl.paultegelaar.rabbitmq.config</targetPackage>
              <useJakartaValidation>true</useJakartaValidation>
              <includeJsr303Annotations>true</includeJsr303Annotations>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>executable-jar-build</id>
      <build>
        <finalName>rabbitmq-queue-creator</finalName>
        <plugins>
          <plugin>
            <groupId>org.jsonschema2pojo</groupId>
            <artifactId>jsonschema2pojo-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
              <execution>
                <goals>
                  <goal>generate</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <sourceDirectory>${basedir}/src/main/resources/schema</sourceDirectory>
              <targetPackage>nl.paultegelaar.rabbitmq.config</targetPackage>
              <useJakartaValidation>true</useJakartaValidation>
              <includeJsr303Annotations>true</includeJsr303Annotations>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.6.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer>
                      <mainClass>nl.paultegelaar.rabbitmq.RabbitMQObjectCreator</mainClass>
                    </transformer>
                  </transformers>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
